{
  "version": 2,
  "buildCommand": "cd src/frontend && npm install && npm run build",
  "outputDirectory": "src/frontend/.next",
  "installCommand": "cd src/frontend && npm install",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://alchemix-backend-production.up.railway.app/api/:path*"
    }
  ],
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/next"
    }
  ]
} 